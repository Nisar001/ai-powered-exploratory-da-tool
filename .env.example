# Application Configuration
APP_NAME="AI-Powered EDA Platform"
APP_VERSION="1.0.0"
APP_ENV="development"
DEBUG=true
LOG_LEVEL="INFO"

# Server Configuration
HOST="0.0.0.0"
PORT=8000
WORKERS=4
RELOAD=true

# API Configuration
API_V1_PREFIX="/api/v1"
API_TITLE="AI-Powered EDA API"
API_DESCRIPTION="Production-grade Exploratory Data Analysis Platform"

# Security
SECRET_KEY=""  # Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:8000,http://localhost:5173"
CORS_ENABLED=true
API_KEY_ENABLED=false
API_KEY=""  # Optional: Set your own API key for authentication

# File Upload Configuration
MAX_UPLOAD_SIZE_MB=100
ALLOWED_EXTENSIONS=".csv"
UPLOAD_DIR="data/uploads"
RESULTS_DIR="data/results"
TEMP_DIR="data/temp"

# Data Processing Configuration
MAX_ROWS=1000000
MAX_COLUMNS=1000
CHUNK_SIZE=10000
NUMERIC_PRECISION=4

# Statistical Analysis Configuration
OUTLIER_METHOD="iqr"
OUTLIER_THRESHOLD=1.5
CORRELATION_THRESHOLD=0.7
MISSING_VALUE_THRESHOLD=0.3
SKEWNESS_THRESHOLD=1.0

# Visualization Configuration
PLOT_DPI=100
PLOT_FORMAT="png"
MAX_PLOTS=20
FIGURE_SIZE_WIDTH=10
FIGURE_SIZE_HEIGHT=6
COLOR_PALETTE="Set2"

# LLM Configuration - Google Gemini (FREE, No Credit Card Required)
LLM_PROVIDER="google"
GOOGLE_API_KEY=""  # Get FREE from https://aistudio.google.com/app/apikey
ANTHROPIC_API_KEY=""  # Optional: Add if using Anthropic Claude
LLM_MODEL="models/gemini-2.5-flash"  # Free model, fast and accurate
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=2000
LLM_TIMEOUT=60
LLM_MAX_RETRIES=3
LLM_RETRY_DELAY=2

# Redis Configuration
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=""
REDIS_DECODE_RESPONSES=true
REDIS_MAX_CONNECTIONS=50

# Celery Configuration
CELERY_BROKER_URL="redis://localhost:6379/0"
CELERY_RESULT_BACKEND="redis://localhost:6379/0"
CELERY_TASK_TRACK_STARTED=true
CELERY_TASK_TIME_LIMIT=3600
CELERY_TASK_SOFT_TIME_LIMIT=3000

# Database Configuration
DATABASE_URL="sqlite+aiosqlite:///./data/eda_platform.db"
DB_ECHO=false
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# Monitoring & Logging
ENABLE_METRICS=true
METRICS_PORT=9090
SENTRY_DSN=""
LOG_FILE_PATH="logs/app.log"
LOG_ROTATION="100 MB"
LOG_RETENTION="30 days"

# Performance & Concurrency
BACKGROUND_TASKS_ENABLED=true
MAX_CONCURRENT_JOBS=10
JOB_TIMEOUT=3600
CACHE_ENABLED=true
CACHE_TTL=3600

# Report Generation
REPORT_FORMAT="json"
ENABLE_HTML_REPORT=true
ENABLE_PDF_REPORT=false
INCLUDE_RAW_DATA=false
